{{#estadisticas}}
<link rel="stylesheet" href="/ProyectoFinal/public/css/inicioDeSesion.css">
<link rel="stylesheet" href="/ProyectoFinal/public/css/lobby.css">
</head>
<body>
<div class="container" style="flex-direction:column">
    <div class="register-box" id="chart">
            <div class="form-row">
                <div class="textbox">
                    <label for="nombreCompleto" class="form-label">Cantidad de usuarios:</label>
                    <input type="text" value="{{cantidad_usuarios}}" name="nombreCompleto" readonly>
                </div>
                 <div class="textbox">
                     <label for="nombreCompleto" class="form-label">Cantidad de partidas:</label>
                     <input type="text" value="{{cantidad_partidas}}" name="nombreCompleto" readonly>
                 </div>
            </div>
            <div class="form-row">
                <div class="textbox">
                    <label for="nombreUsuario" class="form-label">Cantidad de preguntas:</label>
                    <input type="text" value="{{cantidad_preguntas}}" name="nombreUsuario" readonly>
                </div>
                <div class="textbox">
                    <label for="nombreUsuario" class="form-label">Preguntas creadas:</label>
                    <input type="text" value="{{cantidad_preguntas}}" name="nombreUsuario" readonly>
                </div>
            </div>
            <div class="form-row">
                <div class="textbox">
                    <label for="total_trampas" class="form-label">Plata ganada:</label>
                    <input type="text" value="{{total_trampas}}" name="total_trampas" readonly>
                </div>
                <div class="textbox">
                </div>
            </div>
            <button class="btn" onclick="location.href='/ProyectoFinal/index.php?controller=admin&action=getMenuTablas'">Volver</button>
    </div>
</div>
{{/estadisticas}}


