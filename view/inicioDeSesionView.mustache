<body>
    <div class="container">
        <div style="width:80%" class="register-box login-box">
            <h1>Inicia Sesión</h1>
            <form action="/ProyectoFinal/index.php/usuario/iniciarSesion" method="post">
                <div class="textbox" style="margin-bottom:20px">
                    <input type="text" placeholder="Usuario" name="nombreUsuario" required>
                </div>
                <div class="textbox" style="margin-bottom:20px">
                    <input type="password" placeholder="Contraseña" name="password" required>
                </div>
                <button type="submit" class="btn">Entrar</button>
            </form>
            {{#error}}
               <p style="color:red">{{error}}</p>
            {{/error}}
            <p class="register-link">¿No tienes cuenta? <a href="/ProyectoFinal/index.php/usuario/getRegistro">Regístrate</a></p>
        </div>
    </div>
