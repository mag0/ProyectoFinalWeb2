<link rel="stylesheet" href="/ProyectoFinal/public/css/lobby.css">
<link rel="stylesheet" href="/ProyectoFinal/public/css/reloj.css">
</head>
<body onload="startCountdown()">
{{#pregunta}}
    <div class="container">
                <div class="lobby-box">
                    <h1>Pregunta {{numeroPregunta}}</h1>
                    <p>Categoria: <span style="color:white;background-color:{{categoria_color}};padding:5px;border-radius:10px;font-weight:900">{{categoria_nombre}}</span></p>
                    <p>Dificultad: <span style="color:white;background-color:{{colorDificultad}};padding:5px;border-radius:10px;font-weight:900">{{dificultad}}</span></p>

                    <div class="countdown">
                            <div id="countdown">30</div>
                        </div>
                    <p>{{texto_pregunta}}</p>
                    <form action="/ProyectoFinal/index.php?controller=partida&action=verificarRespuesta" method="post">
                        <input type="hidden" name="respuestaCorrecta" value="{{respuesta_correcta}}">
                        <button class="btn" name="respuesta" value="1">{{respuesta_1}}</button>
                        <button class="btn" name="respuesta" value="2">{{respuesta_2}}</button>
                        <button class="btn" name="respuesta" value="3">{{respuesta_3}}</button>
                        <button class="btn" name="respuesta" value="4">{{respuesta_4}}</button>
                    </form>
                    {{#trampas}}
                    <a href="/ProyectoFinal/index.php?controller=partida&action=usarTrampa">Usar trampa</a><br>
                    {{/trampas}}
                    <a href="/ProyectoFinal/index.php?controller=partida&action=reportarPregunta&idPregunta={{id}}">Reportar</a>
                    <div class="audio-container">
                        <audio style="color:red" id="background-music" controls loop>
                            <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3" type="audio/mpeg">
                        </audio>
                    </div>
                </div>
            </div>
            {{/pregunta}}
            <script>
                    // Interceptar la tecla F5 y Ctrl+R (recarga del navegador)
                    document.addEventListener('keydown', function(event) {
                        if (event.key === 'F5' || (event.ctrlKey && event.key === 'r')) {
                            event.preventDefault();
                        }
                    });
                </script>
            <script src="/ProyectoFinal/public/js/reloj.js"></script>